---
layout: default
---

{% unless site.data.resume %}
  <div class="post">
    <header class="post-header">
      <h1 class="post-title">
        {{ page.title }}
        {% if page.cv_pdf %}
          <!-- Embed PDF -->
          <iframe
            src="{% if page.cv_pdf contains '://' %}{{ page.cv_pdf }}{% else %}{{ page.cv_pdf | prepend: 'assets/pdf/' | relative_url }}{% endif %}"
            width="100%"
            height="600px"
            style="border: none;">
          </iframe>
        {% endif %}
      </h1>
    </header>
  </div>
{% endunless %}